<div class="comment-<%= comment.id %> border my-2 p-3">
    <h4><%= comment.user.name%></h4>
    <p>
        <small><%= comment.user.email%></small> <br />
        <small>Posted <%= time_ago_in_words(comment.created_at) %></small>
    </p>

    <% if current_user == comment.user %>
        <div class="button-group float-end">
            <%= button_to "delete", [post, comment], class: "btn btn-sm btn-danger", method: :delete %>
        </div>
    <% end %>

    <hr />
    <p><%= comment.body%></p>
</div>