<div class="d-flex flex-row justify-content-end">
    <% if current_page?(posts_path)%>
        <%= link_to "Show this post", post, class: 'btn btn-secondary mx-1' %>
    <% else%>
        <%= link_to "Back to posts", posts_path, class: 'btn btn-secondary mx-1' %>

        <% if current_user == post.user %>
            <%= link_to "Edit this post", edit_post_path(post), class: 'btn btn-primary mx-1' %>
            <%= button_to "Destroy this post", post, method: :delete, class: 'btn btn-danger mx-1' %>
        <% end %>
    <% end %>
</div>