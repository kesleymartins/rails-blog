<div class="d-flex flex-row justify-content-end">
  <% if current_page?(posts_path) or current_page?(user_path) %>
    <%= link_to "Read more", post, class: 'btn btn-sm btn-secondary mx-1' %>
  <% else %>
    <% if current_user == post.user %>
      <%= link_to "Edit this post", edit_post_path(post), class: 'btn btn-sm btn-primary mx-1' %>
      <%= button_to "Destroy this post", post, method: :delete, class: 'btn btn-sm btn-danger mx-1' %>
    <% end %>
  <% end %>
</div>
