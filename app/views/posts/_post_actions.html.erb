<div class="d-flex flex-row justify-content-end">
  <% if current_page?(root_path) or current_page?(user_path) %>
    <%= link_to "Read more", post, class: 'btn btn-sm btn-secondary mx-1' %>
  <% else %>
    <% if current_user == post.user %>
      <%= link_to edit_post_path(post), class: 'btn btn-sm btn-primary mx-1' do %>
        <i class="bi bi-pencil-square"></i>
        Edit this post
      <% end %>
      <%= button_to post, method: :delete, class: 'btn btn-sm btn-danger mx-1' do %>
        <i class="bi bi-trash3"></i>
        Destroy this post
      <% end %>
    <% end %>
  <% end %>
</div>
